{
  "manifest_version": 2,

  "name": "Hello World!",
  "version": "1.0",
  "description": "A useless extension that says 'Hello World!'",
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Hello World Extension"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/content.js"]
    }
  ]


}