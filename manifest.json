{
  "manifest_version": 2,

  "name": "Hoard It",
  "version": "1.0",
  "description": "An extension that saves snippets of info",
  
  "permissions": [
    "contextMenus"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Hello World Extension"
  },

  "background": {
    "persistent": false,
    "scripts": [
      "js/jquery-2.1.3.min.js",
      "js/background.js"
    ]
  }

